{
  "name": "writer-tools",
  "displayName": "Willem's Writing Tools",
  "description": "A collection of AI-based writing tools to take your blogposts to the next level",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "writer-tools.generateConclusion",
        "title": "Writer Tools: Generate Conclusion"
      }
    ],
    "configuration": [
      {
        "title": "Writer tools",
        "properties": {
          "writer-tools.apiKey": {
            "type": "string",
            "default": "",
            "description": "API key for the Writer Tools API"
          },
          "writer-tools.endpoint": {
            "type": "string",
            "default": "",
            "description": "The endpoint for the Writer Tools API"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
